$LOAD_PATH.unshift(File.expand_path(File.dirname(__FILE__) + "/../lib"))
require "easyoperate"
require "eo"

# easy debug
if ARGV.delete('-d')
  ['rubygems','ruby-debug'].each {|x| require x}
else
  def debugger;end
end

Eo.execute(ARGV)
